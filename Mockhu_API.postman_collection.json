				{
					"name": "Login (Get JWT Tokens)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('access_token', jsonData.access_token);",
									"    pm.environment.set('refresh_token', jsonData.refresh_token);",
									"    console.log('üîê Access Token saved (expires in', jsonData.expires_in, 'seconds)');",
									"    console.log('üîÑ Refresh Token saved');",
									"    ",
									"    // Decode JWT to show user info",
									"    var base64Url = jsonData.access_token.split('.')[1];",
									"    var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');",
									"    var jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {",
									"        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);",
									"    }).join(''));",
									"    var decoded = JSON.parse(jsonPayload);",
									"    console.log('üë§ Logged in as:', decoded.username, '(' + decoded.email + ')');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"identifier\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["v1", "auth", "login"]
						},
						"description": "Login with email/username and password. Returns JWT access and refresh tokens.\n\n**Token Details:**\n- Access Token: Valid for 15 minutes\n- Refresh Token: Valid for 7 days\n\n**Auto-saves tokens to environment variables.**"
					},
					"response": []
				},
